<h1>Sign in</h1>

<%= form_for(:session, :url => sessions_path) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <!-- Initially wanted to put the checkbox into a div class="field", but seems like div counts a newline -->
  <div class="actions">
    <%= f.submit "Sign in" %> <%= f.check_box :remember_me %> <%= f.label :remember_me %>
  </div>
<% end %>

<p>New user? <%= link_to "Sign up now!", signup_path %></p>
